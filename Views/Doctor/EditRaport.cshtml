@model Hospital_System_Management.Models.RaportModel
@{
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}
<div id="main">

    <div class="container">
        <div class="row">
            <h1>Edit your Complaint</h1>
            <div class="col-md-6">
                <form method="post" action="@Url.Action("EditRaport", "Doctor")">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label for="Name">First Name</label>
                        <input type="text" class="form-control" id="firstName" name="FirstName" value="@Model.Name" />
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" id="lastName" name="LastName" value="@Model.Surname" />
                    </div>
                    <div class="form-group">
                        <label for="phone">Birthday</label>
                        <input type="datetime" class="form-control" id="data" name="Date" value="@Model.Birthday" />
                    </div>
                    <div class="form-group">
                        <label for="phone">Birthplace</label>
                        <input type="text" class="form-control" id="birthplace" name="Date" value="@Model.Birthplace" />
                    </div>
                    <div class="form-group">
                        <label for="phone">Raporti</label>
                        <input type="text" class="form-control" id="explanation" name="Explanation" value="@Model.Raporti" />
                    </div>




                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>