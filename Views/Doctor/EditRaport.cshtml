@model Hospital_System_Management.Models.RaportModel
@{
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}
<div id="main">

    <div class="container">
        <div class="row">
            <h1>Edit Raport</h1>
            <div class="col-md-6">
                <form method="post" action="@Url.Action("EditRaport", "Doctor")">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label for="Name">First Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
                    </div>
                    <div class="form-group">
                        <label for="Surname">Last Name</label>
                        <input type="text" class="form-control" id="Surname" name="Surname" value="@Model.Surname" />
                    </div>
                    <div class="form-group">
                        <label for="Birthday">Birthday</label>
                        <input type="datetime" class="form-control" id="Birthday" name="Birthday" value="@Model.Birthday.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="form-group">
                        <label for="Birthplace">Birthplace</label>
                        <input type="text" class="form-control" id="Birthplace" name="Birthplace" value="@Model.Birthplace" />
                    </div>
                    <div class="form-group">
                        <label for="Raporti">Raporti</label>
                        <input type="text" class="form-control" id="Raporti" name="Raporti" value="@Model.Raporti" />
                    </div>



                    <br />
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>