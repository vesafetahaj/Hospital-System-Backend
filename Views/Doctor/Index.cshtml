@{
    ViewData["Title"] = "Doctor Dashboard";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hospital_System_Management.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Anek+Gurmukhi&family=Roboto+Condensed:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        #mySidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #9abddc;
            overflow-x: hidden;
            padding-top: 60px;
            transition: 0.5s;
        }

            #mySidenav a {
                padding: 28px 8px 8px 32px;
                text-decoration: none;
                font-size: 25px;
                color: #fff;
                display: block;
                transition: 0.3s;
                font-family: 'Roboto Condensed', sans-serif;
                font-weight: bold;
            }

            #mySidenav img {
                width: 32px;
                padding-right: 10px;
            }

            #mySidenav a:hover {
                color: #e5f3fd;
            }

            #mySidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

        #main {
            transition: margin-left .5s;
            padding-left: 50px;
            margin-top: -15px;
        }

            #main > h1 {
                font-family: 'Anek Gurmukhi', sans-serif;
                color: #aecce4;
                display: inline-block;
                margin-left: 60px;
            }

        #menu {
            width: 30px;
            cursor: pointer;
            margin-left: 30px;
            margin-top: 10px;
        }

        #logo {
            transition: transform 0.3s ease;
            width: 180px;
        }

        .paragraph {
            transition: margin-left .5s;
            padding-left: 40px;
            margin-top: 7px;
        }

            .paragraph > p {
                font-family: 'Anek Gurmukhi', sans-serif;
                color: #2c6796;
                margin-top: -2rem;
                display: inline-block;
            }

        .foto {
            margin-left: 2rem;
        }

            .foto img {
                width: 77rem;
                height: 25rem;
            }

    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="./images/sunrisecare-hospital-low-resolution-logo-color-on-transparent-background.png" alt="" id="logo">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

    </header>
    <div id="mySidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

        <br />
        <br />
        <a href="#"><img src="./images/home.png" id="home">Home</a>
        <a href="#"><i class="fas fa-user"></i><spam> Profile</spam></a>
        <a href="#"><i class="fas fa-hospital-user"></i><spam> Patients</spam></a>
        <a href="#">
            <i class="fas fa-chart-bar"></i><spam> Appointments</spam>
            <a href="#"><i class="fas fa-suitcase-medical"></i><spam> Medications</spam></a>
            <a href="#"><i class="fas fa-sign-out-alt"></i><spam> Logout</spam>

    </div>
    <span onclick="openNav()"><img src="./images/menublue.png" alt="" srcset="" id="menu"></span>
    <div id="main">


        <h1>Welcome to your dashboard!</h1>

        <div class="paragraph">

            <p>Welcome to your doctor's dashboard, designed to streamline your workflow and enhance patient care<p />
            <p>This comprehensive dashboard provides you with a holistic view of your patients,<p />
            <p>including their vital signs, medical history, and upcoming appointments. <p />
            <p>Stay organized with a task management system that helps you prioritize and track your daily activities. </p>
            <p>Utilize clinical decision support tools and educational resources to stay updated with the latest medical knowledge. </p>
            <p>With this user-friendly dashboard, you can optimize your efficiency, provide the best care possible,</p>
            <p>and make a positive impact on your patients' lives.</p>



        </div>

        <div class="foto">
            <img src="~/images/dashboard-doctor.jpg" />
        </div>
    </div>








    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
            document.getElementById("logo").style.transform = "translateX(250px)";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            document.getElementById("logo").style.transform = "translateX(0)";
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>