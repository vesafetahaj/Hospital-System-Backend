@{
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
@using Hospital_System_Management.Models;
@model ReservationModel;
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: #B0E0E6;
    }

    body, input, textarea, a {
        font-family: Georgia, 'Times New Roman', Times, serif;
    }

    #section {
        width: 100%;
        padding: 10px;
    }

    .box {
        position: relative;
        display: table;
        width: 1100px;
        margin: auto;
        margin-top: 35px;
        border-radius: 30px;
    }



    .form {
        width: 65%;
        margin-left: 200px;
        padding: 40px 25px 35px 25px;
        border-radius: 30px;
        background: rgb(135,206,250);
    }

        .form h1 {
            color: rgb(30,144,255);
            font-family: Arial, Helvetica, sans-serif;
            font-size: 28px;
            margin-top: 10px;
            margin-bottom: 10px;
            text-align: center;
        }

        .form h2 {
            color: #68bde1);
            font-family: Arial, Helvetica, sans-serif;
            font-size: 20px;
            margin-top: 2px;
            margin-bottom: 2px;
            text-align: center;
        }

    .form-title {
        text-align: left;
        margin-left: 23px;
        font-size: 28px;
        letter-spacing: 0.5px;
    }

    .form-fields {
        display: table;
        width: 100%;
        padding: 15px 5px 5px 5px;
    }

        .form-fields input,
        .form-fields textarea {
            border: none;
            outline: none;
            background: none;
            font-size: 18px;
            color: #555;
            padding: 20px 10px 20px 5px;
            width: 100%;
        }

        .form-fields textarea {
            height: 150px;
            resize: none;
        }

    .form-group {
        width: 46%;
        float: left;
        padding: 0px 30px;
        margin: 14px 2px;
        border-radius: 25px;
        box-shadow: inset 8px 8px 8px #ecf0f3, inset -8px -8px 8px #ffff;
    }



    .submit-button {
        width: 96%;
        height: 60px;
        margin: 0px 12px;
        border-radius: 30px;
        font-size: 20px;
        font-weight: 700;
        outline: none;
        cursor: pointer;
        color: #fff;
        text-align: center;
        background: #68bde1;
        box-shadow: 3px 3px 8px #b1b1b1, -3px -3px 8px #ffff;
        transition: .5s;
    }

        .submit-button:hover {
            background: #56cfd2;
        }
</style>
<div id="main">
    <section id="section">
        <div class="box">
            <div class="info">
            </div>
            <div class="form">
                <h1>Book Appointment!</h1>
                <h2>"Say goodbye to waiting, hello to online appointments."</h2>
                <form action="@Url.Action("Create", "Patient")" method="post" name="mesazhi">
                    <!-- aksioni - kontrolleri. -->
                    <div class="form-fields">
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Name, new { @class = "fname", placeholder = "First Name" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Surname, new { @class = "lname", placeholder = "Last Name" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Mosha, new { @class = "email", placeholder = "Age" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.IDCard, new { @class = "phone", placeholder = "ID Card" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Sherbimi, new { @class = "phone", placeholder = "Services" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.DateSubmitted, new {@type="date", placeholder = "Date" })
                        </div>
                    </div>
                    <input type="submit" value="Send message" class="submit-button" name="save">
                </form>
            </div>
        </div>
    </section>
</div>
