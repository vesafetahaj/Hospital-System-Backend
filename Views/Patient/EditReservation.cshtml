@model Hospital_System_Management.Models.ReservationModel
@{
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
<div id="main">

    <div class="container">
        <div class="row">
            <h1>Change your Appointment</h1>
            <div class="col-md-6">
                <form method="post" action="@Url.Action("EditReservation", "Patient")">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label for="Name">First Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
                    </div>
                    <div class="form-group">
                        <label for="Surname">Last Name</label>
                        <input type="text" class="form-control" id="Surname" name="Surname" value="@Model.Surname" />
                    </div>
                    <div class="form-group">
                        <label for="Mosha">Age</label>
                        <input type="number" class="form-control" id="Mosha" name="Mosha" value="@Model.Mosha" />
                    </div>
                    <div class="form-group">
                        <label for="IDCard">Id Card</label>
                        <input type="text" class="form-control" id="IDCard" name="IDCard" value="@Model.IDCard" />
                    </div>
                    <div class="form-group">
                        <label for="Sherbimi">Services</label>
                        <input type="text" class="form-control" id="Sherbimi" name="Sherbimi" value="@Model.Sherbimi" />
                    </div>
                    <div class="form-group">
                        <label for="DateSubmitted">Date</label>
                        <input type="datetime" class="form-control" id="DateSubmitted" name="DateSubmitted" value="@Model.DateSubmitted.ToString("yyyy-MM-dd")" />
                    </div>


                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
