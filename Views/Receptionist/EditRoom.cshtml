@model Hospital_System_Management.Models.RoomReservationModel
@{
    Layout = "~/Views/Shared/_ReceptionistLayout.cshtml";
}
<div id="main"> 

    <div class="container">
        <div class="row">
            <h1>Edit Contact Form Submission</h1>
            <div class="col-md-6">
                <form method="post" action="@Url.Action("EditRoom", "Receptionist")">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label for="phone">Room number</label>
                        <input type="number" class="form-control" id="phone" name="Phone" value="@Model.RoomNumber" />
                    </div>
                    <div class="form-group">
                        <label for="Name">First Name</label>
                        <input type="text" class="form-control" id="firstName" name="FirstName" value="@Model.Name" />
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" id="lastName" name="LastName" value="@Model.Surname" />
                    </div>
                    <div class="form-group">
                        <label for="email">Birthplace</label>
                        <input type="text" class="form-control" id="email" name="Email" value="@Model.BirthPlace" />
                    </div>
                    <div class="form-group">
                        <label for="phone">Date of birth</label>
                        <input type="date" class="form-control" id="phone" name="Phone" value="@Model.DateSubmitted" />
                    </div>

                    <div class="form-group">
                        <label for="phone">Id Card</label>
                        <input type="number" class="form-control" id="phone" name="Phone" value="@Model.IDCard" />
                    </div>
                   

                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
