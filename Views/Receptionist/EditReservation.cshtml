@model Hospital_System_Management.Models.MakeReservationModel
@{
    Layout = "~/Views/Shared/_ReceptionistLayout.cshtml";
}
< div id = "main" >
    < h1 > Edit Appointment</h1>

    <div class= "container" >
        < div class= "row" >
            < div class= "col-md-6" >
                < form method = "post" action = "@Url.Action("EditReservation", "reservation")">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class= "form-group" >
                        < label for= "Name" >Name </ label >
                        < input type = "text" class= "form-control" id = "firstName" name = "Name" value = "@Model.Name" />
                    </ div >
                    < div class= "form-group" >
                        < label for= "Surname" >Surname </ label >
                        < input type = "text" class= "form-control" id = "Surname" name = "Surname" value = "@Model.Surname" />
                    </ div >
                    < div class= "form-group" >
                        < label for= "Age" > Age </ label >
                        < input type = "Age" class= "form-control" id = "Age" name = "Age" value = "@Model.Age" />
                    </ div >
                    < div class= "form-group" >
                        < label for= "IDCard" > ID Card </ label >
                        < input type = "IDCard" class= "form-control" id = "IDCard" name = "IDCard" value = "@Model.IDCard" />
                    </ div >

                    < button type = "submit" class= "btn btn-primary" > Save </ button >
                </ form >
            </ div >
        </ div >
    </ div >
</ div >
