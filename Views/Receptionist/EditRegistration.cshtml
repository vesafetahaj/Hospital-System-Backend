@model Hospital_System_Management.Models.PaymentModel
@{
    Layout = "~/Views/Shared/_ReceptionistLayout.cshtml";
}
<div id="main"> 

    <div class="container">
        <div class="row">
            <h1>Edit Payment </h1>
            <div class="col-md-6">
                <form method="post" action="@Url.Action("EditPayment", "Receptionist")">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label for="Name">First Name</label>
                        <input type="text" class="form-control" id="firstName" name="Name" value="@Model.Name" />
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" id="lastName" name="Surname" value="@Model.Surname" />
                    </div>
                    <div class="form-group">
                        <label for="age">Department name</label>
                        <input type="text" class="form-control" id="age" name="Age" value="@Model.DeptName" />
                    </div>
                    <div class="form-group">
                        <label for="BirthPlace">Place of birth</label>
                        <input type="text" class="form-control" id="BirthPlace" name="BirthPlace" value="@Model.DoctorName" />
                    </div>
                    <div class="form-group">
                        <label for="DateSubmitted">Control name</label>
                        <input type="date" class="form-control" id="kontrolla" name="DateSubmitted" value="@Model.Kontrolla" />
                    </div>
                    <div class="form-group">
                        <label for="IDCard">Payment</label>
                        <input type="number" class="form-control" id="pagesa" name="pagesa" value="@Model.PaymentTotal" />
                    </div>
                    <div class="form-group">
                        <label for="DateSubmitted">Date submitted</label>
                        <input type="date" class="form-control" id="DateSubmitted" name="DateSubmitted" value="@Model.DateSubmitted" />
                    </div>
                   

                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
