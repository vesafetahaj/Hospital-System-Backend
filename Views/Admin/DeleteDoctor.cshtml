@model DoctorModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="main">
    <h1>Delete Doctor</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input type="text" class="form-control" asp-for="Name" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Specialization">Specialization</label>
                        <input type="text" class="form-control" asp-for="Specialization" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input type="email" class="form-control" asp-for="Email" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber">Phone Number</label>
                        <input type="tel" class="form-control" asp-for="PhoneNumber" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Address">Address</label>
                        <input type="text" class="form-control" asp-for="Address" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="PhotoUrl">Photo</label>
                        <div>
                            @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                            {
                                <img src="@Model.PhotoUrl" alt="Profile Picture" class="img-thumbnail" />
                            }
                        </div>
                    </div>

                    <p>Are you sure you want to delete this doctor?</p>

                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
