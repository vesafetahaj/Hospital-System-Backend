@using Hospital_System_Management.Models

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<ContactFormModel>

<div id="main">
    <h1>Contact Form Submissions</h1>

    @if (Model.Count > 0)
    {
        <table class="table table-hover">
            <thead style="background-color: #9abddc;">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Message</th>
                    <th>Date submitted</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody style="background-color: #EAF0FA;">
                @foreach (var submission in Model)
                {
                    <tr>
                        <td>@submission.FirstName</td>
                        <td>@submission.LastName</td>
                        <td>@submission.Email</td>
                        <td>@submission.Phone</td>
                        <td>@submission.Message</td>
                        <td>@submission.DateSubmitted</td>
                        <td>
                            <a href="@Url.Action("EditContact", "Admin", new { id = submission.Id })" class="btn btn-primary btn-sm">Edit</a>
                            <a href="@Url.Action("DeleteContact", "Admin", new { id = submission.Id })" class="btn btn-danger btn-sm">Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No contact form submissions found.</p>
    }
</div>
