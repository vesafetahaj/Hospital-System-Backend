@model Hospital_System_Management.Models.ServiceModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="main">

    <div class="container">
        <div class="row">
            <h1>Edit Doctor</h1>
            <div class="col-md-6">
                <form method="post" action="@Url.Action("EditService", "Admin")">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
                    </div>
                    <div class="form-group">
                        <label for="Pershkrimi">Description</label>
                        <input type="text" class="form-control" id="Pershkrimi" name="Pershkrimi" value="@Model.Pershkrimi" />
                    </div>
                 
                
                    <div class="form-group">
                        <label for="photoUrl">Photo URL</label>
                        <textarea class="form-control" id="photoUrl" name="PhotoUrl">@Model.PhotoUrl</textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
