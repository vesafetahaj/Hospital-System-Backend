@using Hospital_System_Management.Models

@model List<ServiceModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-image {
        flex: 1 0 auto;
        overflow: hidden;
    }

        .card-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
</style>

<div id="main">
    <h1>Services</h1>
    <div style="display:flex; justify-content:end; margin-top: -40px">
        <a href="@Url.Action("CreateService", "Admin")" class="btn btn-outline-primary">Add new services!</a>
    </div>
    
    <div class="row mt-4">
        @if (Model.Count > 0)
        {
            @foreach (var service in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@Url.Content(service.PhotoUrl)" class="card-img-top" alt="Service Image">
                        <div class="card-body">
                            <h5 class="card-title">@service.Name</h5>
                            <p class="card-text">Pershkrimi: @service.Pershkrimi</p>
                        
                            <div class="text-center">
                                <a href="@Url.Action("EditService", "Admin", new { id = service.Id })" class="btn btn-primary">Edit</a>
                                <a href="@Url.Action("DeleteService", "Admin", new { id = service.Id })" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No services found.</p>
        }
    </div>
</div>
