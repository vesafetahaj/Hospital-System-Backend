@using Hospital_System_Management.Models

@model List<DoctorModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="main">
    <h1>Doctors</h1>

    @if (Model.Count > 0)
    {
        <table class="table table-hover">
            <thead style="background-color: #9abddc;">
                <tr>
                    <th>Name</th>
                    <th>Specialization</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody style="background-color: #EAF0FA;">
                @foreach (var doctor in Model)
                {
                    <tr>
                        <td>@doctor.Name</td>
                        <td>@doctor.Specialization</td>
                        <td>@doctor.Email</td>
                        <td>@doctor.PhoneNumber</td>
                        <td>@doctor.Address</td>
                        <td>
                            <a href="@Url.Action("EditDoctor", "Admin", new { id = doctor.Id })">Edit</a> |
                            <a href="@Url.Action("DeleteDoctor", "Admin", new { id = doctor.Id })" onclick="return confirm('Are you sure you want to delete this doctor?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a href="@Url.Action("CreateDoctor", "Admin")" class="btn btn-primary">Create New Doctor</a>
        </div>
    }
    else
    {
        <p>No doctors found.</p>
    }
 </div>
